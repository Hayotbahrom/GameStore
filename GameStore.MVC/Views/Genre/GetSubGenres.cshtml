@model IEnumerable<GameStore.Application.DTOs.Genres.GenreForResultDto>

@{
    ViewData["Title"] = "GetSubGenres";
}

<h1>Sub Genres</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Sub Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Name</td>
                <td>@(genre.ParentGenreName ?? "None")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Genres</a>