@using GameStore.Application.DTOs.Genres
@model IEnumerable<GenreForResultDto>

<h2>Genres</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Genre</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Parent Genre</th>
            <th>Actions</th>
            <th>Games</th>
            <th>Sub genres</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Name</td>
                <td>@(genre.ParentGenreName ?? "None")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-warning">Edit</a> | 
                    <a asp-action="Details" asp-route-id="@genre.Id" class="btn btn-link">Details</a> | 
                    <a asp-action="Delete" asp-route-id="@genre.Id" class=" btn btn-danger" onclick="return confirm('Are you sure you want to delete this genre?')">
                        Delete
                    </a>
                </td>
                <td>
                    <a asp-action="GetGamesByGenre" asp-route-id="@genre.Id" class="btn btn-outline-primary btn-sm">View Games</a>
                </td>
                <td>
                    <a asp-action="GetSubGenres" asp-route-id="@genre.Id" class="btn btn-outline-secondary btn-sm">View Sub Genres</a>
                </td>
            </tr>
        }
    </tbody>
</table>
